block vars
  - var page_name='Machines In Medicine'
  - var slug='press'
  - var section='about'
  - var layout='left-sidebar'
 
extends layout
 
mixin login
  div
    .main-content
     .row
      .small-6.small-centered.columns
        form(method="post", action="/login")
          .row.collapse
            .small-4.medium-4.columns
              input(type='email' placeholder='email')
            .small-4.medium-4.columns
              input(type='password' placeholder='password')
            .small-4.medium-4.columns
              input.postfix.small.button.expand(type='submit' href="#" value='Login')
    .main-content.inverse

block content
  mixin login