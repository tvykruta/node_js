    //- script(type='text/javascript' src='/foundation-5.3.3/js/foundation/foundation.magellan.js')
    script(type='text/javascript' src='/foundation-5.3.3/js/foundation.min.js')
    script(type='text/javascript' src='/machines.js')
    script
      $(document).foundation();

